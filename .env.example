# Telegram Configuration
# 1. Create bot with @BotFather to get token
# 2. Send /getchatid to your bot to get your Chat ID
# 3. Only this Chat ID will be able to access the bot (security feature)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id

# Gateway Configuration
GATEWAY_NAME=My AR.IO Gateway
GATEWAY_CORE_URL=http://ar-io-core:4000
GATEWAY_OBSERVER_URL=http://ar-io-observer:5050
GATEWAY_ADDRESS=your_arweave_wallet_address
GATEWAY_HOST=your.gateway.host

# Monitoring Settings (optional)
HEALTH_CHECK_INTERVAL=60
OBSERVER_CHECK_INTERVAL=300
ALERT_COOLDOWN=600

# Network Monitoring (opt-in features)
MONITOR_GATEWAY_REGISTRY=false
MONITOR_ARNS_ACTIVITY=false
MONITOR_ARNS_RESOLUTION=false
NETWORK_CHECK_INTERVAL=600

# SSL Certificate Monitoring
MONITOR_SSL_CERTIFICATE=true
SSL_CHECK_INTERVAL=86400
SSL_DOMAIN=your_gateway_domain.com

# Resource Alert Thresholds
ALERT_CPU_THRESHOLD=80
ALERT_CPU_DURATION_MINUTES=5
ALERT_MEMORY_THRESHOLD=90
ALERT_DISK_THRESHOLD=85
ALERT_RESPONSE_TIME_THRESHOLD=2000

# Performance Degradation Alert Thresholds
ALERT_BLOCK_SYNC_LAG_THRESHOLD=100
ALERT_ARNS_CACHE_HIT_RATE_THRESHOLD=50
ALERT_ERROR_RATE_THRESHOLD=5

# Observer Performance Alert Thresholds
ALERT_NOT_SELECTED_EPOCHS_THRESHOLD=5
ALERT_LOW_OBSERVER_WEIGHT_THRESHOLD=0.5

# Scheduled Reports
ENABLE_DAILY_SUMMARY=true
DAILY_SUMMARY_TIME=09:00
ENABLE_WEEKLY_SUMMARY=true
WEEKLY_SUMMARY_DAY=1
WEEKLY_SUMMARY_TIME=09:00

# Network (mainnet or testnet)
NETWORK=mainnet

# Log Level (debug, info, warn, error)
LOG_LEVEL=info
